@model IEnumerable<AppleStore.Models.Chi_Tiet_Don_Hang>

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.tenSP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.gia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.soluong)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tonggia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Don_Hang.ten)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.tenSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.gia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.soluong)
            </td>
            <td>
                @Html.Raw(item.tonggia.GetValueOrDefault(0).ToString("N0"))
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Don_Hang.ten)
            </td>


        </tr>
    }

</table>

